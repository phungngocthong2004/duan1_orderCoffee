<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"

    android:layout_marginTop="40dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginBottom="40dp">

        <EditText
            android:id="@+id/ed_TuNgay"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_doanh_thu"
            android:hint="Từ ngày"
            android:textStyle="bold"
            android:textColor="@color/coffee"
            android:textSize="20sp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"

            android:drawableEnd="@drawable/calendar_month"/>

        <EditText
            android:id="@+id/ed_DenNgay"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_doanh_thu"
            android:hint="Đến ngày"
            android:textStyle="bold"
            android:textColor="@color/coffee"
            android:textSize="20sp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:layout_margin="20dp"
            android:drawableEnd="@drawable/calendar_month"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_DoanhThu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doanh thu:"
        android:textColor="@color/coffee"
        android:textStyle="bold"
        android:textSize="27sp"

        android:layout_marginLeft="15dp"/>
    <Button
        android:id="@+id/btn_DoanhThu"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:text="Doanh thu"
        android:textAllCaps="false"
        android:textSize="27sp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/boder_coffee"/>
</LinearLayout>