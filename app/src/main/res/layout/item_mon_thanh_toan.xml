<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="17dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/white_smoke"
            android:padding="12dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgthanhtoan"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ca_phe_sua"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">
                <TextView
                    android:id="@+id/txt_thanhtoan_tenmon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cà phê sữa"
                    android:textColor="@color/coffee"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginBottom="3dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số lượng: 1"
                    android:textColor="@color/black"
                    android:id="@+id/txt_thanhtoan_soluong"
                    android:textSize="17sp"
                    android:layout_marginBottom="3dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_thanhtoan_ThanhTien"
                    android:text="20.000VND"
                    android:textColor="@color/coffee"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>