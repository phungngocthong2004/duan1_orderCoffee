<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context=".SignUp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:gravity="center">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            android:layout_marginTop="50dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COFFEE BREW!"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/coffee"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng ký"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@color/coffee"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"/>
        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="30dp">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txt_signUp_tenDN"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Tên đăng nhập"
                android:textColorHint="@color/black"
                app:boxStrokeWidthFocused="2dp"
                app:startIconDrawable="@drawable/person"
                app:startIconTint="@color/black"
                app:errorEnabled="true">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txt_signUp_HoTen"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Họ tên"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/bistre"
                app:boxStrokeWidthFocused="2dp"
                app:startIconDrawable="@drawable/pen"
                app:startIconTint="@color/black"
                app:errorEnabled="true"
                android:layout_marginTop="20dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txt_signUp_DienThoai"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Điện thoại"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/bistre"
                app:boxStrokeWidthFocused="2dp"
                app:startIconDrawable="@drawable/smartphone"
                app:startIconTint="@color/black"
                app:errorEnabled="true"
                android:layout_marginTop="20dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txt_signUp_matKhau"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Mật khẩu"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/bistre"
                app:boxStrokeWidthFocused="2dp"
                app:startIconDrawable="@drawable/key"
                app:startIconTint="@color/black"
                android:layout_marginTop="20dp"
                app:errorEnabled="true"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/black">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPassword"
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txt_signUp_NhapLai"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Nhập lại mật khẩu"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/bistre"
                app:boxStrokeWidthFocused="2dp"
                app:startIconDrawable="@drawable/key"
                app:startIconTint="@color/black"
                app:errorEnabled="true"
                android:layout_marginTop="20dp"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/black">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <RadioGroup
            android:id="@+id/rg_Quyen"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quyền: "
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <RadioButton
                android:id="@+id/rdo_QuanLy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quản lý"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:layout_marginLeft="10dp"/>
            <RadioButton
                android:id="@+id/rdo_NhanVien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhân viên"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:layout_marginLeft="20dp"/>
        </RadioGroup>

        <Button
            android:id="@+id/btn_SignUp"
            android:layout_width="314dp"
            android:layout_height="68dp"
            android:text="Đăng ký"
            android:textSize="30sp"
            android:textAllCaps="false"
            android:background="@drawable/border_button"
            android:textColor="@color/white"
            android:drawableEnd="@drawable/arrow_right"
            android:paddingEnd="15dp"
            android:paddingStart="45dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bạn đã có tài khoản? "
                android:textSize="20dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tv_SignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng nhập"
                android:textColor="@color/coffee"
                android:textSize="20dp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>